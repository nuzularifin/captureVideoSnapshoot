<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        tools:context=".ui.EntryFragment"
        android:gravity="center">

        <TextView
            android:text="Capture Snapshot"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:id="@+id/videoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video"
            android:layout_marginHorizontal="4dp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/photoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:layout_marginHorizontal="4dp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/imagePickerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Picker" />

        <Button
            android:layout_marginTop="16dp"
            android:id="@+id/imageCaptureSnapshotButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture Video Snapshot" />

        <ProgressBar
            android:layout_marginTop="16dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pb_light"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:max="100" />

        <Button
            android:id="@+id/btn_compress_with_ligth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick for Compress with LightCompress" />


        <ProgressBar
            android:layout_marginTop="16dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pb_mp4"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:max="100" />

        <Button
            android:id="@+id/btn_compress_with_mp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick for Compress with mp4compress" />

        <ProgressBar
            android:layout_marginTop="16dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pb_ffmpeg"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:max="100" />
        <Button
            android:id="@+id/btn_compress_with_ffmpeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick for Compress with FFmpeg" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>